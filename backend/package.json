    "@fastify/rate-limit": "9.1.0",
    "@fastify/static": "^6.12.0",
    "@prisma/client": "^5.22.0",
    "@sinclair/typebox": "^0.31.28",
    "@walletconnect/sign-client": "^2.21.10",
    "axios": "^1.13.1",
