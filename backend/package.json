    "nanoid": "^3.3.11",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.64.0",
    "nodemailer": "^6.9.15",
    "prisma": "^5.6.0",
    "qrcode": "^1.5.3",
